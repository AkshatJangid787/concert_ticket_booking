generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Show {
  id          String   @id @default(cuid())
  title       String
  description String?
  showDate    DateTime
  price       Int
  totalSeats  Int?
  tickets     Ticket[]
  createdAt   DateTime @default(now())
}

model Ticket {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  paymentId String?  @unique
  status    String   @default("PENDING")
  createdAt DateTime @default(now())

  showId String
  show   Show   @relation(fields: [showId], references: [id])
}
